#!/bin/sh

# Copyright 2025 Canonical Ltd.
# See LICENSE file for licensing details.

set -xe

mkdir -p /tmp/nginx/body /tmp/nginx/proxy /tmp/nginx/fastcgi /tmp/nginx/uwsgi /tmp/nginx/scgi
chown snap_daemon:snap_daemon /tmp/nginx/body /tmp/nginx/proxy /tmp/nginx/fastcgi /tmp/nginx/uwsgi /tmp/nginx/scgi
cd $SNAP
exec "$SNAP/usr/bin/setpriv" --clear-groups --reuid snap_daemon --regid snap_daemon -- "$SNAP/usr/sbin/nginx" "-c" "$SNAP/nginx/nginx.conf"
